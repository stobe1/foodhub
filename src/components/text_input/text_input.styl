.text-input
  padding-top: 14px
  position: relative

  &_invert &__input
    color: $color_form_text_invert
    background-color: $color_form_invert_input_bg

  &__input
    margin-top: 10px
    margin-bottom: 20px
    font-size: 16px
    height: 29px
    line-height: 29px
    color: $color_form_text
    border: 0
    border-bottom: 1px solid $color_form_secondary
    outline: 0
    width: 66%
    background-color: transparent

    &_short
      width: 150px

    &_regular
      width: auto

    &_long
      width: 100%

  &__headline
    font-size: 12px
    color: $color_form_secondary
    position: absolute
    top: 0
    left: 0

.ng-invalid:not(form)
  border-color: $color_input_invalid
  box-shadow: 0 1px 0 $color_input_invalid

.ng-valid:focus
  border-color: $color_main
  box-shadow: 0 1px 0 $color_main

  & + .text-input__headline
    color: $color_main
