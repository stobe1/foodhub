.product-card
  display: block
  height: auto
  width: 100%
  max-width: 500px
  overflow: hidden
  card()
  background-color: white
  transition: box-shadow .15s

  &_active
    box-shadow: 1px 1px 5px 1px $color_main

  &:hover:not(&_active)
    card_hover()

  &__header
    position: relative

  &__image-container
    position: relative
    height: 200px
    background-color: $color_main
    overflow: hidden

  &__image
    display: block
    width: 102%
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

    @media $mobile
      height: auto
      width: 102%

  &:hover &__description
    opacity: 1

  &__info
    position: absolute
    left: 0
    display: block
    margin: 0
    color: white
    width: 100%

  &__description
    top: 0
    padding: 15px 10px 80px 20px
    font-size: 12px
    font-weight: 400
    line-height: 18px
    background: linear-gradient(to bottom, rgba(#000, 0.8) 0, rgba(231, 56, 39, 0) 100%)
    transition: opacity 0.2s
    opacity: 0

  &__name
    bottom: 0
    padding: 45px 10px 10px 20px
    font-size: 16px
    font-weight: 400
    background: linear-gradient(to top, rgba(#333, 0.8) 0, rgba(231, 56, 39, 0) 100%)

  &__body
    padding: 15px 20px 10px 20px

  &__label
    display: block
    width: 100%
    font-size: 11px
    color: #555

  &__half
    display: inline-block
    vertical-align: top
    width: 37%

    &-text-align-right
      text-align: right
      width: 60%

  &__price
    display: inline-block
    margin: 0
    font-size: 21px
    color: #111

  &__footer
    padding: 0 15px 15px 10px
