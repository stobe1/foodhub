default_font()
  font: 400 16px 'Roboto'
  text-decoration: none
  font-style: normal

truncate()
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

clearfix()
  &:after
    content: ""
    display: block
    clear: both

card()
  border-radius: 2px
  box-shadow: 0 1px 3px 0 rgba(#000, 0.2), 0 1px 1px 0 rgba(#000, .14), 0 2px 1px -1px rgba(#000, .12)

card_hover()
  box-shadow: 0 1px 3px 0 rgba(#000, 0.4), 0 1px 1px 0 rgba(#000, .3), 0 2px 1px -1px rgba(#000, .3)
  

page_header_title()
  color: $color_header_title
  padding: 30px 20px
  margin: 0
  border-bottom: $border_separator
