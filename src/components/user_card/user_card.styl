.user-card
  width: 100%
  overflow: hidden
  card()
  background-color: white
  transition: box-shadow .15s

  &_editable &__close
    display: block
    
  &_editable &__footer
    display: block
  
  &:hover
    card_hover()

  &__header,
  &__footer
    background-color: rgba(#000, 0.05)
    position: relative
    
  &__footer
    display: none
    padding-left: 20px
    border-top: 1px solid rgba(#000, 0.2)

  &__header
    position: relative
    border-bottom: 1px solid rgba(#000, 0.2)

  &__close
    display: none
    position: absolute
    right: 10px
    top: 10px
    color: #555
    cursor: pointer
    font-size: 20px

    &:hover
      color: #000
  
  &__name
    padding: 20px 60px 20px 20px
    margin: 0
    font-size: 14px
    font-weight: 500
    color: #000

  &__price
    font-size: 16px
    font-weight: 900
    color: $color_main
    
  &__body
    height: 300px
    overflow: auto
    overflow-x: hidden
    padding: 0 15px

  &__input-label
    display: inline-block
    padding: 20px 15px 18px 15px
    font-size: 14px
    color: #222
    user-select: none
    cursor: pointer

  &__input
    position: relative
    opacity:0
    cursor: pointer
    
    &-custom
      position: absolute
      top: 50%
      left: 30px
      width: 16px
      height: 16px
      border: 2px solid #444
      border-radius: 3px
      background-color: white
      z-index: 1
      transform: translate(-50%, -50%)
      pointer-events: none
      

    &:focus + &-custom
      border-color: $color_main

    &:checked + &-custom
      border-color: $color_main
      background: $color_main embedurl('../img/ic_check_white_24dp_2x.png') no-repeat center
      background-size: 100%
