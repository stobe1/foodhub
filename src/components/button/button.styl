.button
  display: inline-block
  padding: 9px 18px
  border-radius: 2px
  color: $color_session_info_text
  background-color: $color_main
  font-size: 14px
  text-align: center
  cursor: pointer
  line-height: 17px
  text-transform: uppercase
  font-weight: 500
  user-select: none

  &:hover
    background-color: $color_button_primary_hover
    text-decoration: none

  &:focus
    text-decoration: none

  &:active
    background-color: $color_button_primary_active

  &_transparent
    padding: 8px 10px
    border-radius: 2px
    color: $color_main
    background-color: transparent
    box-shadow: none

    &:hover
      background-color: rgba($color_main, 0.2)
      text-decoration: none

  &_big
    padding: 12px 20px

  &_biger
    padding: 12px 75px

  &_stretch
    width: 100%
    
  &_small
    font-size: 12px
    text-transform: none
    padding: 4px 10px
    
.button_not_hover:hover
  background-color: rgba($color_main, 0) !important
  text-decoration: none
  cursor: default