.header
  width: 100%
  height: $header_height
  background-color: $color_main
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5)
  border-radius: 0
  position: relative
  z-index: 2

  &__center-column
    margin: 0 20px
    display: flex
    justify-content: space-between
    align-items: flex-center
    position: relative
  
  &__logo
    display: block
    width: 125px
    color: transparent
    height: $header_height
    background: embedurl('../img/logo.png') no-repeat center
    background-size: 100% auto

    @media $mobile-sm
      width: 100px
      background-size: 100% auto
